{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Run Analyzer",
            "request": "launch",
            "mainClass": "main.Main",
            "vmArgs": [
                "--add-opens", "java.base/java.util=ALL-UNNAMED",   // Example --add-opens, not actually needed in the project
                "--add-opens", "java.base/java.lang=ALL-UNNAMED",
                "--add-opens", "java.base/java.io=ALL-UNNAMED",
                "-javaagent:agent-jar-with-dependencies.jar",       // JAR with memory analyzer
                "-jar", "target/app.jar"                            // JAR of this project
            ],
            "args": [],
            "projectName": "PluginDemo",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
    ]
}